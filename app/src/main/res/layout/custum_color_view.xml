<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m_50dp"
    android:layout_height="@dimen/m_50dp"
    android:layout_marginEnd="@dimen/m_16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/m_40dp"
        android:layout_height="@dimen/m_40dp"
        app:cardCornerRadius="@dimen/m_20dp"
        app:cardBackgroundColor="@color/orange"
        android:id="@+id/colorLayout"
        >
        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_correct"
            android:visibility="invisible"
            />
    </androidx.cardview.widget.CardView>

</FrameLayout>